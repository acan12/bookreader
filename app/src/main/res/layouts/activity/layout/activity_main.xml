<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_dark_green"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/payment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/color_blue"
            android:text="Demo Payment"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/rx_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/color_red"
            android:text="Demo RX"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/sample_rx_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/color_red"
            android:text="SAMPLE RX"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/mapbox_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/color_orange"
            android:text="Demo Mapbox"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/map_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/color_green"
            android:text="Demo Map"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/chat_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/color_grey"
            android:text="Demo Chat"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>
